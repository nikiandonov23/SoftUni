
@using BookVerse.ViewModels.Book 
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateBookViewModel
@using static BookVerse.GCommon.ValidationConstants

@{
    ViewData["Title"] = "Create Book";
    var today = DateTime.Now.ToString(ValidDateFormat);
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Book" asp-action="Create" method="post">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Title" class="form-label-add-edit">Book Title</label>
                    <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.GenreId" class="form-label-add-edit">Select Genre</label>
                    <select asp-for="@Model.GenreId" class="form-control" aria-required="true"
                            asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                        <option value="">...</option>
                    </select>
                    <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.CoverImageUrl" class="form-label-add-edit">Cover Image URL</label>
                <input asp-for="@Model.CoverImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.CoverImageUrl" class="text-danger"></span>
            </div>

            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.PublishedOn" class="form-label-add-edit">Published On</label>
                <input asp-for="PublishedOn" class="form-control" type="date" 
                       value="@(Model.PublishedOn.ToString(ValidDateFormat))" />

                <span asp-validation-for="@Model.PublishedOn" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>
 