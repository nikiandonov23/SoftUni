  @using BookVerse.ViewModels.Book
  @model IEnumerable<IndexBookViewModel>

  @{
    ViewData["Title"] = "All Books";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Book
        </a>
    }
</div>
<hr />

<div class="row g-4">
    @foreach (var book in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 bg-dark text-white border-0 shadow-sm">
                <div class="d-flex align-items-center justify-content-center" style="height: 220px;">
                    <img src="@(string.IsNullOrWhiteSpace(book.CoverImageUrl) ? Url.Content("~/images/default-image.jpg") : book.CoverImageUrl)"
                         alt="@book.Title"
                         class="img-fluid"
                         style="max-height: 100%; max-width: 100%; object-fit: contain;"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/default-image.jpg")';" />
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@book.Title">@book.Title</h5>
                    <p class="card-text mb-1"><small>Genre: @book.Genre</small></p>
                    <p class="card-text"><small>Favorites: @book.SavedCount</small></p>

                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"
                           class="btn btn-info flex-fill">
                            <i class="fas fa-info-circle"></i> Details
                        </a>

                        @if (User?.Identity?.IsAuthenticated == true && !book.IsAuthor && !book.IsSaved)
                        {
                            <form asp-controller="Book" asp-action="AddToMyBooks" method="post" class="flex-fill">
                                <input type="hidden" name="id" value="@book.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-book"></i> My Books
                                </button>

                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
 