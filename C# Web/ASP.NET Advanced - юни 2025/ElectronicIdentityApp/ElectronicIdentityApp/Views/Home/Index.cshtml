@{
    ViewData["Title"] = "Home - DocuWallet";
}

<div class="container mt-5">
    <section class="hero text-center p-5 bg-light rounded shadow-card">
        <h1 class="display-4 mb-3"><span class="text-gradient">DocuWallet</span></h1>
        <p class="lead mb-4">Your secure digital wallet for documents, identity, addresses, taxes, and employment info.</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Documents" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fa-solid fa-folder-open me-2"></i> My Documents
            </a>
            <a asp-controller="Addresses" asp-action="Index" class="btn btn-success btn-lg">
                <i class="fa-solid fa-house me-2"></i> Addresses
            </a>
            <a asp-controller="Taxes" asp-action="Index" class="btn btn-warning btn-lg">
                <i class="fa-solid fa-file-invoice-dollar me-2"></i> Taxes
            </a>
            <a asp-controller="Employment" asp-action="Index" class="btn btn-info btn-lg">
                <i class="fa-solid fa-briefcase me-2"></i> Employment
            </a>
        </div>
    </section>
</div>

<div class="container mt-5">
    <section class="features-section">
        <h2 class="text-center mb-4">Wallet Overview</h2>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card shadow-sm text-center p-3 h-100">
                    <i class="fa-solid fa-id-card fa-3x text-primary mb-3"></i>
                    <h5>Identity Docs</h5>
                    <p>Manage your passports, driving licenses, and other IDs in one secure place.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card shadow-sm text-center p-3 h-100">
                    <i class="fa-solid fa-house fa-3x text-success mb-3"></i>
                    <h5>Addresses</h5>
                    <p>Keep track of your current and residential addresses.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card shadow-sm text-center p-3 h-100">
                    <i class="fa-solid fa-file-invoice-dollar fa-3x text-warning mb-3"></i>
                    <h5>Taxes</h5>
                    <p>Health, pension, and other tax-related information at a glance.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card shadow-sm text-center p-3 h-100">
                    <i class="fa-solid fa-briefcase fa-3x text-info mb-3"></i>
                    <h5>Employment</h5>
                    <p>Manage your jobs, school/university info, and employment status easily.</p>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .shadow-card {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card i {
        transition: transform 0.3s;
    }

    .card:hover i {
        transform: scale(1.2);
    }

    .card:hover {
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }
</style>
