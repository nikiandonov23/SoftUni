@model IEnumerable<IndexDocumentViewModel>

@{
    ViewData["Title"] = "My Documents";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center"><span class="text-gradient">My Documents</span></h1>

    <div class="row g-4">
        @foreach (var doc in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card shadow-sm h-100 p-3">
                    <div class="d-flex justify-content-center align-items-center" style="height:150px;">
                        <i class="fa-solid fa-id-card fa-4x text-primary"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@($"{doc.FirstName} {doc.MiddleName} {doc.LastName}")">
                            @doc.FirstName @doc.MiddleName @doc.LastName
                        </h5>
                        <p class="card-text mb-1"><strong>Document No:</strong> @doc.DocumentNumber</p>
                        <p class="card-text mb-1"><strong>Nationality:</strong> @doc.Nationality</p>
                        <p class="card-text mb-1"><strong>Address:</strong> @doc.Address</p> 
                        <p class="card-text mb-1"><strong>Issued On:</strong> @doc.IssuedOn.ToString("dd MMM yyyy")</p>
                        <p class="card-text mb-1"><strong>Expires On:</strong> @doc.ExpiredOn.ToString("dd MMM yyyy")</p>
                        <p class="card-text"><strong>Valid:</strong> @(doc.IsValid ? "Yes" : "No")</p>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@doc.Id" class="btn btn-info flex-fill">
                                <i class="fa-solid fa-eye me-1"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-warning flex-fill">
                                <i class="fa-solid fa-pen me-1"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <p class="lead">No documents found. Click below to add your first document.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fa-solid fa-folder-plus me-2"></i> Add Document
            </a>
        </div>
    }
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card i {
        transition: transform 0.3s;
    }

    .card:hover i {
        transform: scale(1.2);
    }

    .card:hover {
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }
</style>
